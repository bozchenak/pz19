        <TextBox Name="tblog" HorizontalAlignment="Center" Margin="0,79,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Height="30" Background="{x:Null}" Grid.Row="1"/>
        <PasswordBox Name="tbpas" HorizontalAlignment="Center" Margin="0,156,0,0" VerticalAlignment="Top" Width="120" Height="30" Background="{x:Null}" Grid.Row="1"/>
